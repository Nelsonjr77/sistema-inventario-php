# Protección de la carpeta de uploads
# Permitir solo imágenes

<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Bloquear acceso a otros tipos de archivos
<FilesMatch "\.">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Deshabilitar la ejecución de scripts
Options -ExecCGI
AddHandler cgi-script .php .pl .py .jsp .asp .sh .cgi
RemoveHandler .php .phtml .php3 .php4 .php5 .php6

# Prevenir listado de directorios
Options -Indexes
